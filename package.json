{
   "name": "base-app",
   "version": "0.0.7",
   "type": "module",
   "description": "This is a template for my projects.",
   "author": "Sebastian Hilton (https://www.sebastianhilton.com)",
   "homepage": "https://www.sebastianhilton.com",
   "repository": {
      "type": "git",
      "url": "git+https://github.com/Meeovi/base-app"
   },
   "bugs": {
      "url": "https://github.com/Meeovi/base-app/issues"
   },
   "license": "MIT",
   "private": true,
   "scripts": {
      "typecheck": "tsc --noEmit",
      "starter-commit": "git add . && git commit -m \"ready for update\"",
      "starter-update": "git pull \"https://github.com/Meeovi/base-app\"",
      "build": "nuxt build",
      "dev": "nuxt dev --port 3011",
      "ts-node": "ts-node -r tsconfig-paths/register --compiler-options '{\"module\":\"CommonJS\"}'",
      "generate": "nuxt generate",
      "preview": "nuxt preview",
      "postinstall": "nuxt prepare",
      "gqlg": "npx gqlg --schemaFilePath graphql/schema.graphql --destDirPath graphql/framework --depthLimit 2"
   },
   "dependencies": {
      "@nuxtjs/i18n": "^10.1.0",
      "@nuxtjs/mcp-toolkit": "^0.5.2",
      "@nuxtjs/seo": "^3.2.2",
      "@pinia/nuxt": "^0.11.2",
      "nuxt": "^4.2.2",
      "nuxt-security": "^2.4.0",
      "pinia": "^3.0.3",
      "vuetify-nuxt-module": "^0.18.8"
   },
   "devDependencies": {
      "@nuxt/test-utils": "^3.21.0",
      "@nuxtjs/turnstile": "^1.0.0",
      "@types/node": "^24.10.3",
      "@vue/test-utils": "^2.4.6",
      "@vueuse/core": "^14.0.0",
      "@vueuse/nuxt": "^14.0.0",
      "nuxt-layers-utils": "^0.3.0",
      "sass": "^1.94.2",
      "sass-embedded": "^1.93.3",
      "tsx": "^4.20.6",
      "typescript": "^5.9.3",
      "vue-tsc": "^2.2.12",
      "vitest": "^4.0.15"
   },
   "workspaces": [
      "layers/*"
   ]
}
